= simple_form_for @order do |f|
  = f.input :apartment_id, label: 'Apartment',
          collection: @apartments,
          label_method: -> (collection){ "room number: #{collection.room_number}" },
          value_method: :id,
          include_blank: false
  = f.input :start_from, label: 'Start from',
          as: :date, start_year: Time.now.year,
          end_year: Time.now.year + 3,
          order: [:day, :month, :year]
  = f.input :end_at, label: 'End at',
          as: :date, start_year: Time.now.year,
          end_year: Time.now.year + 8,
          order: [:day, :month, :year]
  = f.input :total, label: 'Total'
  = f.button :submit